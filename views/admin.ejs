<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard | Student Result System</title>
    <link rel="stylesheet" href="/api/public/admin.css">
</head>

<body>
    <div class="container">

        <!-- NAVBAR -->
        <div class="navbar">
            <h2>Admin Dashboard</h2>
            <form action="/" method="GET">
                <button class="logout-btn">Logout</button>
            </form>
        </div>

        <!-- NAVIGATION TABS -->
        <div class="tabs">
            <button class="tab active">Manage Students</button>
            <button class="tab">Add Student</button>
            <button class="tab">View Reports</button>
        </div>

        <!-- STUDENT TABLE -->
        <div class="table-section">
            <h3>All Registered Students</h3>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Roll No</th>
                        <th>Email</th>
                        <th>Course</th>
                        <th>GPA</th>
                        <th>Reports</th>
                        <th>Update</th>
                    </tr>
                </thead>
                <tbody>
                    <% students.forEach(student=> { %>
                        <tr>
                            <td>
                                <%= student.id %>
                            </td>
                            <td>
                                <%= student.name %>
                            </td>
                            <td>
                                <%= student.rollNo %>
                            </td>
                            <td>
                                <%= student.email %>
                            </td>
                            <td>
                                <%= student.course %>
                            </td>
                            <td>
                                <%= student.gpa %>
                            </td>
                            <td>
                                <a href="/report/<%= student.id %>" class="view-btn">View </a>
                            <td>
                            <a href="/edit-student/<%= student.id %>" class="edit-btn">Edit</a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <p class="summary">Total Students: <strong>
                    <%= students.length %>
                </strong></p>
        </div>
        <!-- ADD STUDENT SECTION -->
        <div class="add-student">
            <h3>Add New Student</h3>
        
            <form action="/add-student" method="POST" class="add-form">
                <input type="text" name="id" placeholder="Student ID (e.g., S104)" required>
                <input type="text" name="name" placeholder="Full Name" required>
                <input type="text" name="rollNo" placeholder="Roll No" required>
                <input type="email" name="email" placeholder="Email" required>
                <input type="password" name="password" placeholder="Password" required>
                <input type="text" name="course" placeholder="Course (e.g., B.Tech CSE)" required>
                <input type="text" name="semester" placeholder="Semester (e.g., 4th)">
                <input type="text" name="department" placeholder="Department (e.g., Computer Science)">
                <input type="number" step="0.01" name="gpa" placeholder="GPA (e.g., 8.5)">
                <input type="text" name="photo" placeholder="Photo URL (optional)">
                <button type="submit">Add Student</button>
            </form>
        </div>


        <!-- FOOTER -->
        <footer>
            <p>Â© 2025 | Designed by Mohammad Aadil | Kanpur Institute of Technology, Kanpur</p>
        </footer>
    </div>
</body>

</html>